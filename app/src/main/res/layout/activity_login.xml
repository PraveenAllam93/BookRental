<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cds"
    android:orientation="vertical"
    tools:context="com.example.hp.bookrental.Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:fontFamily="@font/lily_script_one"
        android:gravity="center|bottom"
        android:text="BOOK"
        android:textColor="#FFF"
        android:textSize="55sp"
        tools:fontFamily="@font/lily_script_one" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:fontFamily="@font/lily_script_one"
        android:gravity="center_horizontal"
        android:text="RENTAL"
        android:textColor="#FFF"
        android:textSize="55sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="serif-monospace"
        android:text="EMAIL:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#d9e5f7"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="5dp"
        android:hint="Enter your email here"
        android:inputType="textAutoComplete"
        android:textColor="#FF00FF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="serif-monospace"
        android:text="PASSWORD:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#d9e5f7"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="5dp"
        android:hint="Enter your Password "
        android:inputType="textPassword"
        android:textColor="#FF00FF" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/allerta_stencil"
        android:gravity="center"
        android:text="LogIn"
        android:textColor="#161409"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/forgot_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="#ffff"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:text="-----------------or-----------------"
        android:textColor="#ffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:text="New user? SignUp"
        android:textColor="#ffff"
        android:textSize="15dp" />

</LinearLayout>

