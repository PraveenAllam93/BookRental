<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.bookrental.sellerDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:gravity="center"
        android:text="SELLER INFORMATION"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="Email :-"
        android:textColor="#000000"
        android:textSize="20dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/seller_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="18dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:clickable="true"
        app:backgroundTint="?android:attr/colorPrimary"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_dialog_email" />


</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Phone Number :-"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seller_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="18dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/seller_phone"
            android:layout_alignTop="@+id/seller_phone"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seller_phone"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/fab3"
            android:clickable="true"
            app:backgroundTint="?android:attr/colorPrimary"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/stat_notify_chat" />


    </RelativeLayout>

</LinearLayout>
